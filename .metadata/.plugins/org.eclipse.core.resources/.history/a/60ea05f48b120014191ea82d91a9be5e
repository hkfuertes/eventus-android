package es.hkapps.eventus.api;

import android.app.Activity;
import android.content.SharedPreferences;

public class Util {
	public static final String server_addr="http://192.168.1.15/eventus/proyecto/web/";
	public static final String pGeneral="eventus_preferences_general";
	public static final String pToken="eventus_preferences_general_token";
	public static final String pUsername="eventus_preferences_general_username";
	
	public static String getToken(Activity act){
		SharedPreferences settings = act.getSharedPreferences(Util.pGeneral, 0);
	    return settings.getString(Util.pToken, null);
	}
	
	public static void setToken(Activity act, String token){
		SharedPreferences settings = act.getSharedPreferences(Util.pGeneral, 0);
		SharedPreferences.Editor editor = settings.edit();
		editor.putString(Util.pToken, token);
	}
	
	public static String getUsername(Activity act){
		SharedPreferences settings = act.getSharedPreferences(Util.pGeneral, 0);
	    return settings.getString(Util.pUsername, null);
	}
}
